<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="142dp"
    android:layout_marginHorizontal="@dimen/dp_24"
    android:background="@drawable/popup_background"
    app:cardCornerRadius="@dimen/dp_16"
    android:elevation="@dimen/dp_16">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/textViewReason"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reason"
    style="@style/font_bold.black.16"
    android:layout_marginStart="@dimen/dp_40"
    android:layout_marginTop="@dimen/dp_13"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross"
            android:layout_marginEnd="@dimen/dp_23"
            app:layout_constraintTop_toTopOf="@id/textViewReason"
            app:layout_constraintBottom_toBottomOf="@id/textViewReason"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/colorGreyE5"
            app:layout_constraintTop_toBottomOf="@id/textViewReason"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextReason"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_17"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            app:layout_constraintStart_toStartOf="@id/textViewReason"
            app:layout_constraintEnd_toStartOf="@id/buttonSend"
            app:layout_constraintTop_toTopOf="@id/buttonSend"
            app:layout_constraintBottom_toBottomOf="@id/buttonSend"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconDrawable="@drawable/ic_bottom_arrow"
            >

        <AutoCompleteTextView
            android:id="@+id/textInputReason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:inputType="none"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            style="@style/font_medium.black"
            android:text="My Reason"
            android:textAlignment="center"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>
        <View
            android:id="@+id/buttonSend"
            android:layout_width="74dp"
            android:layout_height="59dp"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/reason_background"
            app:layout_constraintEnd_toEndOf="@id/imageViewCross"
            app:layout_constraintTop_toBottomOf="@id/view"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            app:layout_constraintTop_toTopOf="@id/buttonSend"
            app:layout_constraintBottom_toBottomOf="@id/buttonSend"
            app:layout_constraintStart_toStartOf="@id/buttonSend"
            app:layout_constraintEnd_toEndOf="@id/buttonSend"/>
</androidx.constraintlayout.widget.ConstraintLayout>