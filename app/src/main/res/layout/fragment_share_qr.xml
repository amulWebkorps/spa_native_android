<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include
        android:id="@+id/includeToolbar"
        layout="@layout/layout_common_toolbar" />

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/textViewMyTips"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Tips"
    style="@style/font_bold.white.20"
    app:layout_constraintTop_toBottomOf="@id/includeToolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/idIVQrcode"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMyTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/font_regular.black.16"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/scan_qa_code_to_generate_payment_link_of_100_aed"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="44dp"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintTop_toBottomOf="@id/idIVQrcode"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shareQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_qr_code"
        style="@style/font_bold.white.20"
        android:textFontWeight="600"
        android:layout_marginTop="@dimen/dp_21"
        android:paddingHorizontal="@dimen/dp_36"
        android:textAllCaps="false"
        android:paddingVertical="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_generate_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>