<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp_20"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <include
        android:id="@+id/includeProfile"
        layout="@layout/layout_settings"  />

    <include
        android:id="@+id/includeWallet"
        layout="@layout/layout_settings"/>

    <include
        android:id="@+id/includeBankDetail"
        layout="@layout/layout_settings"/>


    <include
        android:id="@+id/includeMyQrCode"
        layout="@layout/layout_settings"/>

        <include
            android:id="@+id/includeChangeLanguage"
            layout="@layout/layout_settings"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/ButtonCommon"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@id/textViewVersion"
        android:text="@string/logout"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        style="@style/font_regular.grey80.14"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>